<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
        "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="KisInventory">
    
   <resultMap id="resultmap" class="java.util.HashMap">  
     <result property="id" column="id" javaType="java.lang.String" /> 
     <result property="code" column="code" javaType="java.lang.String" />  
     <result property="count" column="count" javaType="java.lang.String" />  
     <result property="wareHouseNumber" column="wareHouseNumber" javaType="java.lang.String" />
    </resultMap>  

    <select id="findAllInventory" resultMap="resultmap" parameterClass="map">
          select 
		p1.FItemID as id,
		'001' as wareHouseNumber,
		p1.FNumber as code ,
		isnull(k1.fqty,0) as count
 		from t_ICItemCore p1
 		inner join (
					select FItemID, SUM(FQty) as  fqty
					from ICInventory 
					group by FItemID 
 				) k1
 			on p1.FItemID = k1.FItemID
			and FNumber like '002.0%'
 		order by FNumber
    
     <!--  select 
		CAST(st.FStockID as varchar) + CAST(p.FItemID as varchar) as id,
		st.FNumber as wareHouseNumber,
		p.FNumber as code ,
		isnull(st.fqty,0) as count
 		from t_ICItemCore p
 		right join (
					select m.FStockID, s.FNumber, s.FName, m.FItemID, m.FQty 
 					from ICInventory m
 					inner join t_Stock s on m.FStockID = s.FItemID
 				) st
 			on p.FItemID = st.FItemID
 		order by st.FStockID,p.FItemID
 	 	-->
    </select>
    
    <update id="updateSyncStatus" parameterClass="map">
      update t_inventory_sync_status
      <dynamic prepend="set" >
        FSYNC_STATUS=#sync_status#
      </dynamic>     
      where FID=#FID#      
    </update>
    
    
</sqlMap>
